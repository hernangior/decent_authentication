.row
  .col-lg-6.offset-lg-3
    %h2.text-center Edit Profile
    .card
      .card-block
        = form_for @user, url: update_profile_path do |f|
          - if @user.errors.any?
            .alert.alert-danger
              Please correct the errors below to continue.
          .form-group{class: form_error_class(@user, :name)}
            %label.form-control-label(for='user_name') Name
            = f.text_field :name, class: 'form-control'
            = model_error_display(@user, :name)
          .form-group{class: form_error_class(@user, :email)}
            %label.form-control-label(for='user_email') Email
            = f.email_field :email, class: 'form-control'
            = model_error_display(@user, :email)
          .form-group{class: form_error_class(@user, :password)}
            %label.form-control-label(for='user_password') Password
            .float-right
              %small.text-muted Optional
            = f.password_field :password, class: 'form-control'
            = model_error_display(@user, :password)
          .form-group{class: form_error_class(@user, :password_confirmation)}
            %label.form-control-label(for='user_password_confirmation') Password Confirmation
            .float-right
              %small.text-muted Optional
            = f.password_field :password_confirmation, class: 'form-control'
            = model_error_display(@user, :password_confirmation)
          = f.submit 'Save', class: 'btn btn-block btn-primary'
