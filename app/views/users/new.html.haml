.row.mar-t-lg
  .col-lg-6.mar-xy-auto
    %h3.text-center Create Account
    = form_for @user do |f|
      - if @user.errors.any?
        .alert.alert-danger
          Please correct the errors below to continue.
      .input-field(class="#{form_error_class(@user, :name)}")
        %label(for='user_name') Name
        = f.text_field :name, autofocus: true
        = model_error_display(@user, :name)
      .input-field(class="#{form_error_class(@user, :email)}")
        %label(for='user_email') Email
        = f.email_field :email
        = model_error_display(@user, :email)
      .input-field(class="#{form_error_class(@user, :password)}")
        %label(for='user_password') Password
        = f.password_field :password
        = model_error_display(@user, :password)
      .input-field(class="#{form_error_class(@user, :password_confirmation)}")
        %label(for='user_password_confirmation') Password Confirmation
        = f.password_field :password_confirmation
        = model_error_display(@user, :password_confirmation)
      = f.submit 'Save', class: 'button button-block'
    %p.text-center.mar-y-lg
      = link_to 'Sign In', signin_path
